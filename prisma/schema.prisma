generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id               String   @id @default(uuid())
  name             String?
  type             String
  size             String
  age              Int
  energy_level     Int
  dependency_level Int
  environment      String
  city             String
  description      String
  latitude         Decimal?
  longitude        Decimal?

  organization    Organization @relation(fields: [organization_id], references: [id])
  organization_id String

  @@map("pets")
}

model Organization {
  id            String   @id @default(uuid())
  name          String
  email         String
  cep           String
  address       String
  latitude      Decimal?
  longitude     Decimal?
  whatsapp      Int
  password_hash String

  Pet Pet[]

  @@map("organization ")
}
